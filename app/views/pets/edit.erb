<h1>Update Pet</h1>
<form action="/pets" method="POST">
  <label>Name:</label>

  <br>

  <input type="text" name="name">

  <h3>Existing Owners</h3>
  <% @owners.each do |owner| %>
    <input type="checkbox" name="owner_ids[]" id="<%= owner.id %>" value="<%= owner.id %>"><%= owner.name %><br>
  <% end %>
  <br>
  <h3>New Owner</h3>
  <label>Owner Name: </label>
  <br>
  <input type="text" name="owner_name" id="owner_name"></input>
  <br>
  <input type="submit" value="Create Pet">
</form>


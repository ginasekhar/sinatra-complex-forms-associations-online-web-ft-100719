<h1>Update Pet <%= @pet.name %></h1>
<form action="/pets/<%= @pet.id %>" method="POST">
<input id="hidden" type="hidden" name="_method" value="patch">
    <label>Edit the Pet's Name:</label>
    <br>
    <input type="text" name="pet[name]" value="<%= @pet.name %>" id=pet_name>
    <br>
    <p>Select an existing owner or create a new one below.</p>
  <label>Owner Name:</label>
  input type="text" name="pet[owner_id]" id="<%= @pet.owner_id %>" value="<%= @pet.owner_id %>"><%= @pet.owner.name %> %>
  <br>

  <h3>Existing Owners</h3>
  <% @owners.each do |owner| %>
    <input type="radio" name="pet[owner_id]" id="<%= owner.id %>" value="<%= owner.id %>" <%="checked" if @pet.owner == owner %>><%= owner.name %><br>
  <% end %>
  <br>
  <h3>New Owner</h3>
  <label>Owner Name: </label>
  <br>
  <input type="text" name="owner[name]" id="owner_name"></input>
  <br>
  <input type="submit" value="Update Pet">
</form>
